<div class="card m-3">
    <h3 class="card-header">Create New Post</h3>
    <form class="card-body new-post-form">
        <label class="form-label mb-3" for="post-title">Title:</label>
        <input type="text" class="form-control mb-3" name="post-title" />


        <label class="form-label mb-3" for="post-content">Content:</label>
        <textarea class="form-control mb-3" rows="3" name="post-content"></textarea>

        <button type="submit" class="btn btn-primary mb-3">Post!</button>
    </form>
</div>

<script src="/javascript/create-post.js"></script>