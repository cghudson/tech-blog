<div class="card m-4">
    <h3 class="card-header">Sign Up!</h3>

    <form class="card-body signup-form">

        <label class="col-sm-2 col-form-label mb-3" for="username-signup">Username:</label>
        <div class="col-sm-10 mb-3">
            <input class="form-control" type="text" placeholder="username" id="username-signup" />
        </div>

        <label class="col-sm-2 col-form-label mb-3" for="username-password">Password:</label>
        <div class="col-sm-10 mb-3">
            <input class="form-control" type="password" placeholder="password" id="password-signup" />
        </div>

        <div class="d-grid gap-2 d-md-block m-3">
            <button type="submit" class="btn btn-primary m-2">Signup</button>
            <button type="button" class="btn btn-info m-2"><a href="/login">Log in instead!</a></button>
        </div>

    </form>
</div>

<script src="/javascript/signup.js"></script>