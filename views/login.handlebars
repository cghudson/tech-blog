<div class="card m-4">
    <h2 class="card-header">Log in:</h2>

    <form class="card-body login-form">
        <div class=" row mb-3">

            <label class="col-sm-2 col-form-label mb-3" for="username-login">Username:</label>
            <div class="col-sm-10 mb-3">
                <input class="form-control" type="text" placeholder="username" id="username-login" />
            </div>

            <label class="col-sm-2 col-form-label mb-3" for="password-login">Password:</label>
            <div class="col-sm-10 mb-3">
                <input class="form-control" type="password" placeholder="password" id="password-login" />
            </div>

            <div class="d-grid gap-2 d-md-block m-3">
                <button type="submit" class="btn btn-primary m-2">Log in</button>
                <button type="button" class="btn btn-info m-2"><a href="/signup">Sign up instead!</a></button>

            </div>
        </div>
    </form>

</div>

<script src="/javascript/login.js"></script>