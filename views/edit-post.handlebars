<div class="card m-4">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">

        <input type="hidden" name="post-id" value="{{post.id}}" />

        <div class="row mb-3">
            <label for="post-title" class="col-sm-2 col-form-label mb-3">Title</label>
            <div class="col-sm-10 mb-3">
                <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
            </div>


            <label class="col-sm-2 col-form-label mb-3" for="content">Content</label>
            <div class="col-sm-10 mb-3">
                <textarea name="post-content" type="text" class="form-input">{{post.post_content}}</textarea>
            </div>

            <div class="d-grid gap-2 d-md-block m-3">
                <button type="submit" class="btn btn-primary">Update Post</button>
                <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
            </div>

        </div>

    </form>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>